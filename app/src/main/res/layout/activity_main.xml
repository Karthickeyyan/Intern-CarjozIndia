<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_without_artboard"
    android:layout_marginStart="-158dp"
    android:layout_marginEnd="-120dp"
    android:paddingLeft="25dp"
    android:layout_marginTop="-300dp"
    android:layout_marginBottom="-130dp"
    tools:context=".MainActivity">

    <CheckedTextView
        android:id="@+id/sport_btn"
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/selector" />

    <ImageView
        android:id="@+id/sports"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_sports"
        android:layout_marginTop="660dp"
        android:layout_marginStart="397dp"
        />

    <TextView
        android:id="@+id/sport_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="394dp"
        android:layout_marginTop="700dp"
        android:fontFamily="roboto"
        android:text="sport"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:textSize="18sp" />

    <CheckedTextView
        android:id="@+id/food_btn"
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/selector"
         />

    <ImageView
    android:id="@+id/pizza"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:src="@drawable/ic_pizza"
    android:layout_marginTop="520dp"
    android:layout_marginStart="220dp"
    />


    <TextView
        android:id="@+id/food_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="570dp"
        android:text="Food"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:fontFamily="roboto"/>


    <CheckedTextView
        android:id="@+id/retail_btn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="385dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/selector"
        />
    <ImageView
        android:id="@+id/cart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_cart"
        android:layout_marginTop="525dp"
        android:layout_marginStart="420dp"
        />

    <TextView
        android:id="@+id/retail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="415dp"
        android:layout_marginTop="565dp"
        android:text="Retail"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="roboto"
        />

    <CheckedTextView
        android:id="@+id/entertainment_btn"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="810dp"
        android:background="@drawable/selector" />

    <ImageView
        android:id="@+id/music"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="850dp"
        android:src="@drawable/ic_music" />

    <TextView
        android:id="@+id/enter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="910dp"
        android:text="Entertainment"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="roboto"
        android:textFontWeight="500"
        />

    <CheckedTextView
        android:id="@+id/travel_btn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/selector" />

    <ImageView
        android:id="@+id/travels"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_travel"
        android:layout_marginTop="720dp"
        android:layout_marginStart="205dp"
        />

    <TextView
        android:id="@+id/travel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="755dp"
        android:text="Travel"
        android:fontFamily="roboto"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textColor="#000000"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="190dp"
        android:layout_marginTop="350dp"
        android:text="Choose Category that represent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="roboto"
        android:textColor="#000000"
        android:textFontWeight="400"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="what you want to see"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="roboto"
        android:textFontWeight="400"
        android:textColor="#000000"
        android:layout_marginStart="240dp"
        android:layout_marginTop="370dp"/>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="430dp"
        android:layout_marginTop="1010dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableEnd="@drawable/next"
        android:text="Next"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="1010dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Back"
        android:textSize="20sp"
        android:drawableStart="@drawable/back"
        android:outlineProvider="background"
        android:textColor="#000000"/>

</RelativeLayout>